{
	"info": {
		"_postman_id": "random-uuid",
		"name": "BusinessCounter",
		"description": "Collection for BusinessCounter API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Sign Up",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"first_name\": \"John\",\n    \"middle_name\": \"\",\n    \"last_name\": \"Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"password\": \"YourPassword123!\",\n    \"gender\": \"male\",\n    \"phone\": \"1234567890\",\n    \"country_code\": \"+1\",\n    \"role_id\": 1,\n    \"address_line1\": \"123 Main St\",\n    \"address_line2\": \"Apt 4B\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"postal_code\": \"10001\",\n    \"country\": \"USA\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/api/v1/auth/signup",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"api",
								"v1",
								"auth",
								"signup"
							]
						},
						"description": "Create a new user account"
					},
					"response": []
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john.doe@example.com\",\n    \"password\": \"YourPassword123!\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/api/v1/auth/login",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"api",
								"v1",
								"auth",
								"login"
							]
						},
						"description": "Login with email and password"
					},
					"response": []
				}
			],
			"description": "Authentication related endpoints"
		},
		{
			"name": "Protected Routes",
			"item": [
				{
					"name": "Protected Route Test",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}",
								"description": "JWT token received from login"
							}
						],
						"url": {
							"raw": "http://localhost:3000/protected-route",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"protected-route"
							]
						},
						"description": "Test protected route access with JWT token"
					},
					"response": []
				}
			],
			"description": "Routes that require authentication"
		}
	],
	"variable": [
		{
			"key": "authToken",
			"value": "your_jwt_token_here"
		}
	]
}
